---
interface Props {
	className: string
	href: string
	icon: string
	text: string
	title: string
}

const { className, href, icon, text, title } = Astro.props
---

<article
	id="slide"
	class:list={[
		className,
		' flex min-h-[420px] w-[260px] flex-col items-center justify-start rounded-lg bg-blue py-7 text-center text-white',
	]}
>
	<div>
		<img class="mb-9" src={icon} alt={icon} />
	</div>
	<div class="max-w-[170px] grow">
		<h3 class="mx-auto mb-9 grid h-12 place-items-center font-roboto-700 text-base uppercase">
			{title}
		</h3>
		<p class="mx-auto w-[154px] text-pm">{text}</p>
	</div>
	<a
		href={href}
		aria-label={title}
		class:list={[
			'grid h-10 w-40 place-content-center bg-white font-roboto-500',
			'rounded-md border border-blue text-button uppercase text-blue',
		]}>Ver m√°s</a
	>
</article>
<script>
	const slide = document.querySelector('#slide')
	slide.classList.add('last:hidden')
</script>
