---
interface Props {
	className: string
	href: string
	icon: string
	text: string
	title: string
}

const { className, href, icon, text, title } = Astro.props
---

<article
	class:list={[
		className,
		'text-white flex min-h-[420px] w-full min-w-[260px] flex-col items-center justify-start rounded-lg bg-blue py-7 text-center',
	]}
>
	<div>
		<img class="mb-9" src={icon} alt={icon} />
	</div>
	<div class="max-w-[170px] grow">
		<h3 class="text-base font-roboto-700 mx-auto mb-9 grid h-12 place-items-center uppercase">
			{title}
		</h3>
		<p class="mx-auto w-[154px] text-pm">{text}</p>
	</div>
	<a
		href={href}
		aria-label={title}
		class:list={[
			'bg-white font-roboto-500 grid h-10 w-40 place-content-center',
			'rounded-md border border-blue text-button uppercase text-blue',
		]}>Ver m√°s</a
	>
</article>
