---
import xIcon from '../../public/images/icons/x.svg?raw'
import linkedinIcon from '../../public/images/icons/linkedin.svg?raw'
import instagramIcon from '../../public/images/icons/instagram.svg?raw'
import ingalaLogo from '../../public/images/ingala-logo.svg?raw'

const year = () => new Date().getFullYear()

const linkList = [
	{
		text: 'Inicio',
		href: '/',
		'aria-label': 'Inicio',
	},
	{
		text: 'About us',
		href: '#about',
		'aria-label': 'About us',
	},
	{
		text: 'Servicios',
		href: '#verticals',
		'aria-label': 'Servicios',
	},
	// {
	// 	text: 'Team',
	// 	href: '/team',
	// 	'aria-label': 'Team',
	// },
	{
		text: 'Contacto',
		href: '#contact',
		'aria-label': 'Contacto',
	},
	// {
	// 	text: 'FAQ',
	// 	href: '/faq',
	// 	'aria-label': 'FAQ',
	// },
	// {
	// 	text: 'Nuestros clientes',
	// 	href: '/clientes',
	// 	'aria-label': 'Nuestros clientes',
	// },
	{
		text: 'Trabaja con nosotros',
		href: '#work',
		'aria-label': 'Trabaja con nosotros',
	},
]
---

<footer class="mb-4 bg-darkGrey text-center text-sm text-white">
	<div
		class="flex flex-col items-center gap-12 p-9 md:flex-row-reverse md:justify-end md:gap-32 md:px-7 min-[1600px]:px-20"
	>
		<div id="pannel-right" class="text-left">
			<h1 class="mb-6 font-roboto-500">Secciones</h1>
			<nav>
				<ul
					class="grid gap-3 min-[375px]:grid-flow-col min-[375px]:grid-rows-3 min-[375px]:gap-x-24 lg:grid-rows-2 xl:grid-rows-1"
				>
					{
						linkList.map((link) => (
							<li>
								<a href={link.href} aria-label={link['aria-label']}>
									{link.text}
								</a>
							</li>
						))
					}
				</ul>
			</nav>
		</div>
		<div id="panel-left" class="flex flex-col gap-4 p-6 md:items-start">
			<Fragment set:html={ingalaLogo} />
			<div class="year">© {year}</div>
			<a class="priv-terms">Privacy — Terms</a>
			<div id="social" class="flex justify-center gap-7">
				<div class="ex">
					<Fragment set:html={xIcon} />
				</div>
				<div class="linkedin">
					<Fragment set:html={linkedinIcon} />
				</div>
				<div class="instagram">
					<Fragment set:html={instagramIcon} />
				</div>
			</div>
		</div>
	</div>
</footer>
