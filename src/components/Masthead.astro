	// links.forEach((link) => {
	// 	link.addEventListener('click', function () {
	// 		menu.classList.toggle('invisible')
	// 		menu.classList.toggle('opacity-0')
	// 	})
	// })
	document.getElementById('closeNav').addEventListener('click', function () {
		burger.checked = false
		document.body.classList.remove('overflow-hidden')
	})
	links.forEach(function (element) {
		element.addEventListener('click', function () {
			burger.checked = false
			document.body.classList.remove('overflow-hidden')
		})
	})
	burger.addEventListener('change', function () {
		if (this.checked) {
			document.body.classList.add('overflow-hidden') // Deshabilita el scroll cuando el menú se abre
		} else {
			document.body.classList.remove('overflow-hidden') // Restaura el comportamiento de scroll normal cuando el menú se cierra
		}
	})
</script>

