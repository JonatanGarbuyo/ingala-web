import { Image } from 'astro:assets'
import LinkedinLogo from '../assets/images/linkedin-logo.astro'
import joinUs from '../assets/images/join-us.jpg'
---

<section class="relative">
	<!-- Div hecho para mantener margin cuando vas por link -->
	<div id="work" class="invisible absolute -top-[64px] left-0 h-1 w-full"></div>
	<div class="mx-auto flex max-w-[1440px] justify-center">
		<!-- <div>
			<Image
				src={joinUs}
				alt="Developer at work"
				class="h-full max-h-[596px] w-full max-w-[770px]"
			/>
		</div> -->
		<div
			class="flex w-full flex-col items-center justify-center gap-6 px-6 py-20 text-center text-blue md:max-w-[50%] md:gap-11"
		>
			<h2 class="max-w-xl font-poppins-600 text-4xl leading-relaxed lg:text-title">
